type instant : datetime (format="%Y-%m-%d %H:%M")
type natural : integer (min=0)
type time : float (min=1e-15)
type positive : natural (min=1)
type thousandth : fixed (decimals=3)

node point {
	x: float,
	y: float,
	moment: time,
	alarmed: bool (coerce=true)
}

enum color {
	RED,
	GOLD,
	GREEN
}

node colored_point extends point {
	color: color
}

root {
	dummy: integer,
	dummy2: thousandth,
	dummy3: string(minLength=2, maxLength=2),
	optional path_color: color,
	points: colored_point[min=2,max=10],
	colors: color[],
	start: instant,
	end: instant
}

